@model EBill.Models.Bill

@{
    ViewData["Title"] = "Create Bill";
}

<h2>Create Bill</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <hr />

    <h4>Products</h4>
    <table class="table" id="productsTable">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.Items[i].ProductName" class="form-control" />
                        <input type="hidden" asp-for="@Model.Items[i].BillId" />
                    </td>
                    <td>
                        <input asp-for="@Model.Items[i].Quantity" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="@Model.Items[i].Price" class="form-control" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="removeRow(this)">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="button" class="btn btn-secondary" onclick="addRow()">Add Product</button>
    <hr />
    <button type="submit" class="btn btn-primary">Save Bill</button>
</form>

@section Scripts {
    <script>
        let index = @Model.Items.Count;

        function addRow() {
            let table = document.getElementById('productsTable').getElementsByTagName('tbody')[0];
            let row = table.insertRow();

            row.innerHTML = `
                <td><input name="Items[${index}].ProductName" class="form-control" /></td>
                <td><input name="Items[${index}].Quantity" type="number" class="form-control" /></td>
                <td><input name="Items[${index}].Price" type="number" step="0.01" class="form-control" /></td>
                <td><button type="button" class="btn btn-danger" onclick="removeRow(this)">Remove</button></td>
            `;

            index++;
        }

        function removeRow(button) {
            button.closest('tr').remove();
        }
    </script>
}
